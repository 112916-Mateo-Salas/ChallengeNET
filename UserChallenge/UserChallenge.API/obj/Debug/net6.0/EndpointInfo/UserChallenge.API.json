{
  "openapi": "3.0.1",
  "info": {
    "title": "UserChallenge.API",
    "version": "1.0"
  },
  "paths": {
    "/api/Usuario/{id}": {
      "get": {
        "tags": [
          "Usuario"
        ],
        "summary": "Obtiene un usuario por su identificador.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Identificador numérico del usuario.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Devuelve el usuario.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/UsuarioDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UsuarioDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/UsuarioDto"
                }
              }
            }
          },
          "404": {
            "description": "Usuario no encontrado.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor."
          }
        }
      },
      "put": {
        "tags": [
          "Usuario"
        ],
        "summary": "Actualiza un usuario existente.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id del usuario a actualizar.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "description": "Datos a actualizar.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUsuario"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUsuario"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUsuario"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Actualización correcta, sin contenido de retorno."
          },
          "400": {
            "description": "Solicitud inválida.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Usuario no encontrado.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor."
          }
        }
      },
      "delete": {
        "tags": [
          "Usuario"
        ],
        "summary": "Elimina un usuario por su id.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id del usuario a eliminar.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Eliminación correcta."
          },
          "404": {
            "description": "Usuario no encontrado.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor."
          }
        }
      }
    },
    "/api/Usuario": {
      "get": {
        "tags": [
          "Usuario"
        ],
        "summary": "Obtiene una lista de usuarios filtrada por nombre, provincia o ciudad.",
        "parameters": [
          {
            "name": "Nombre",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Provincia",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Ciudad",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Devuelve la lista (puede estar vacía).",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UsuarioDto"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UsuarioDto"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UsuarioDto"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor."
          }
        }
      },
      "post": {
        "tags": [
          "Usuario"
        ],
        "summary": "Crea un nuevo usuario.",
        "requestBody": {
          "description": "Datos del usuario a crear.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterUsuario"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterUsuario"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterUsuario"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Recurso creado correctamente.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/CreatedUsuarioDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreatedUsuarioDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreatedUsuarioDto"
                }
              }
            }
          },
          "400": {
            "description": "Solicitud inválida.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreatedDomicilioDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "calle": {
            "type": "string",
            "nullable": true
          },
          "numero": {
            "type": "string",
            "nullable": true
          },
          "provincia": {
            "type": "string",
            "nullable": true
          },
          "ciudad": {
            "type": "string",
            "nullable": true
          },
          "fechaCreacion": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "CreatedUsuarioDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "nombre": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "fechaCreacion": {
            "type": "string",
            "format": "date-time"
          },
          "domicilio": {
            "$ref": "#/components/schemas/CreatedDomicilioDto"
          }
        },
        "additionalProperties": false
      },
      "DomicilioDto": {
        "type": "object",
        "properties": {
          "calle": {
            "type": "string",
            "nullable": true
          },
          "numero": {
            "type": "string",
            "nullable": true
          },
          "provincia": {
            "type": "string",
            "nullable": true
          },
          "ciudad": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "RegisterUsuario": {
        "type": "object",
        "properties": {
          "nombre": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "domicilio": {
            "$ref": "#/components/schemas/DomicilioDto"
          }
        },
        "additionalProperties": false
      },
      "UpdateUsuario": {
        "type": "object",
        "properties": {
          "nombre": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "domicilio": {
            "$ref": "#/components/schemas/DomicilioDto"
          }
        },
        "additionalProperties": false
      },
      "UsuarioDto": {
        "type": "object",
        "properties": {
          "nombre": {
            "type": "string",
            "nullable": true
          },
          "domicilio": {
            "$ref": "#/components/schemas/DomicilioDto"
          }
        },
        "additionalProperties": false
      }
    }
  }
}